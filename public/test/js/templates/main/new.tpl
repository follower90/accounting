<div class="panel panel-default">
    <div class="panel-heading">Новая запись</div>
    <div class="panel-body add-new-form">
        <div class="form-inline row" role="form">
            <div class="form-group col-xs-2">
                <input type="text" class="datepicker form-control" id="date-add" name="date" value="" placeholder="Когда ?" />
            </div>
            <div class="form-group col-xs-3">
                <input type="text" class="form-control" id="name" name="name" value="" placeholder="Что ?" />
            </div>
            <div class="form-group col-xs-2">
                <input type="text" class="form-control" id="sum" name="amount" value="" placeholder="Сколько ?"/>
            </div>
            <div class="form-group col-xs-2">
                <div class="select-categories"></div>
            </div>
            <div class="form-group col-xs-2">
                <button class="btn btn-default new-entry" name="add">Добавить</button>
            </div>
        </div>
    </div>
</div>
